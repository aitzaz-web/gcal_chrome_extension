{
  "manifest_version": 3,
  "name": "GPAL - Like a Calendar Buddy - But Way Smarter.",
  "version": "1.0",
  "description": "GPAL doesn't just add events - it understands them. An AI calendar assistant that turns your thoughts into plans with one click.",
  "permissions": [
    "contextMenus",
    "storage",
    "identity"
  ],
  
  "oauth2": {
    "client_id": "6247732498-868gunk803r29jabfcrp6rq2v7ebl2t3.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
